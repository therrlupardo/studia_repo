<Window x:Class="lab8.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="CreateDialog" Height="450" Width="300">
    <Grid RenderTransformOrigin="0.495,0.572">
        <Label Margin="20,53,106,325">Name</Label>
        <TextBox x:Name="dialogName" Margin="87,59,20,325" RenderTransformOrigin="0.5,0.5"/>
        <RadioButton x:Name="radioButtonFile" Margin="87,99,133,290">File</RadioButton>
        <RadioButton x:Name="radioButtonDirectory" Margin="159,99,53,290">Directory</RadioButton>
        <CheckBox x:Name="checkBoxRO" Margin="87,148,61,241">ReadOnly</CheckBox>
        <CheckBox x:Name="checkBoxA" Margin="87,178,61,211">Archive</CheckBox>
        <CheckBox x:Name="checkBoxH" Margin="87,208,61,181">Hidden</CheckBox>
        <CheckBox x:Name="checkBoxS" Margin="86,238,62,151">System</CheckBox>
        <Button x:Name="buttonOK" Margin="78,273,154,116" Click="ButtonOK_Click">OK</Button>
        <Button x:Name="buttonCancel" Margin="162,273,70,116" RenderTransformOrigin="-0.947,-5.032" Click="ButtonCancel_Click">Cancel</Button>
    </Grid>
</Window>
